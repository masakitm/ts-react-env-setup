{
	"editor.tabSize": 2,
	"editor.insertSpaces": true,
	"editor.formatOnSave": true,
	"editor.detectIndentation": false,
	"editor.useTabStops": false,
	"eslint.autoFixOnSave": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		{
			"language": "typescript",
			"autoFix": true
		},
		{
			"language": "typescriptreact",
			"autoFix": true
		}
	],
	"[javascript]": {
		"editor.formatOnSave": false,
	},
	"[javascriptreact]": {
		"editor.formatOnSave": false,
	},
	"[typescript]": {
		"editor.formatOnSave": false,
	},
	"[typescriptreact]": {
		"editor.formatOnSave": false,
	},
}